<!DOCTYPE html>
<html lang="en" data-theme="black">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<link rel="stylesheet" href="/tailwind.css">
<script src="https://unpkg.com/htmx.org@1.9.10"
    integrity="sha384-D1Kt99CQMDuVetoL1lrYwg5t+9QdHe7NLX/SoJYkXDFfX37iInKRy5xLSi8nO7UC"
    crossorigin="anonymous"></script>

<body>

    <div class="w-full h-full px-14">

        <!-- Navbar -->

        <div class="navbar bg-base-100">
            <div class="flex-1">
                <a class="btn btn-ghost text-xl">daisyUI</a>
                <ul class="menu menu-horizontal px-1">
                    <li><a>Link</a></li>
                </ul>
            </div>
            <div class="flex-none">
                <ul class="menu menu-horizontal px-1">
                    <a class="btn" onclick="window.location.href='/auth/login'">Account</a>
                </ul>
            </div>
        </div>

        <!-- Typing Area -->

        <div class="relative w-full h-full">

            <div class="relative mockup-window border border-base-300 ">

                <div class="cursor-pointer blur-sm p-5 border-t border-base-300 resize-none text-2xl text-gray-400"
                    id="textSection">
                    <% let formattedText=text.split("").map(char=> `<span id='textChar'
                            class='py-1'>${char}</span>`).join(""); %>
                        <%= formattedText %>
                </div>

            </div>

            <div class="absolute top-0 w-full h-full flex justify-center items-center text-lg cursor-pointer"
                id="blurOverlay">
                Click here or press any key to focus
            </div>

        </div>

    </div>

</body>
<script src="/script.js"></script>

</html>