<!DOCTYPE html>
<%- include('../partials/theme.ejs'); %>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
    </head>

    <link rel="stylesheet" href="/assets/tailwind.css">

    <script src="https://unpkg.com/htmx.org@1.9.10"
        integrity="sha384-D1Kt99CQMDuVetoL1lrYwg5t+9QdHe7NLX/SoJYkXDFfX37iInKRy5xLSi8nO7UC"
        crossorigin="anonymous"></script>

    <body>
        <!-- Navbar -->

        <%- include('../partials/navbar.ejs', {pictureURL: currentUserDetails.pictureURL}); %>

            <div class="w-full h-full px-32">

                <div class="flex justify-around items-center w-full h-full">

                    <!-- Invite Code -->
                    <div class="flex flex-col gap-6 bg-base-200 rounded-box p-6 max-w-xl border">

                        <div class="flex flex-col gap-2 items-center">
                            <h1 class="font-bold text-xl text-center">Invite Code</h1>
                        </div>

                        <input type="text" class="input input-bordered w-full max-w-xs" readonly
                            value="<%= currentLobbyDetails.inviteCode %>" />

                        <button class="btn">Copy</button>

                    </div>


                    <div class="flex flex-col justify-center items-center">

                        <!-- Players joining -->
                        <div class="flex flex-col gap-6 bg-base-200 rounded-box p-6 max-w-xl border">

                            <div class="flex flex-col gap-2 items-center">
                                <h1 class="font-bold text-xl text-center">Players Joined</h1>
                            </div>

                            <!-- Players -->

                            <div class="avatar placeholder flex justify-center items-center">
                                <div class="bg-neutral text-neutral-content rounded-full w-12">
                                    <span class="text-xl">AI</span>
                                </div>
                                <span class="px-4">Ayesha</span>
                            </div>

                            <div class="avatar placeholder flex justify-center items-center">
                                <div class="bg-neutral text-neutral-content rounded-full w-12">
                                    <span class="text-xl">AI</span>
                                </div>
                                <span class="px-4">Ayesha</span>
                            </div>

                            <div class="avatar placeholder flex justify-center items-center">
                                <div class="bg-neutral text-neutral-content rounded-full w-12">
                                    <span class="text-xl">AI</span>
                                </div>
                                <span class="px-4">Ayesha</span>
                            </div>

                        </div>


                        <div>
                            <button class="btn btn-primary mt-7">Start Game</button>
                        </div>

                    </div>

                </div>

            </div>

    </body>

    </html>